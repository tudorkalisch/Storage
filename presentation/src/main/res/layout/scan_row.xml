<android.support.v7.widget.CardView android:id="@+id/rowAddCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rowFieldAddTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rowValueAddET"
        app:layout_constraintEnd_toStartOf="@id/rowValueAddET"/>

        <EditText
            android:id="@+id/rowValueAddET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edit_text_margins"
            android:layout_marginEnd="@dimen/text_view_margin_start"
            android:layout_marginStart="@dimen/edit_text_margins"
            android:layout_marginTop="@dimen/edit_text_margins"
            android:ems="10"
            android:hint="@string/default_edittext_hint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rowFieldAddTV"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="text" />
</android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
